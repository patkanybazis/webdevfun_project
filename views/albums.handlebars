<div class="principal">
  <h1>Music Albums</h1>
  <p>Explore our collection of amazing albums.</p>

  <div class="albums-grid">
    {{#each albums}}
      <div class="album-card">
        <img src="{{this.cover_url}}" alt="album cover for {{this.title}}" />
        <h2>{{this.title}}</h2>
        <p><strong>Artist:</strong> {{this.artist_name}}</p>
        <p><strong>Released:</strong> {{this.release_year}}</p>
        <p>{{this.description}}</p>
      </div>
    {{/each}}
  </div>
</div>